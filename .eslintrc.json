{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [ "plugin:react/recommended", "airbnb" ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [ "react" ],
  "rules": {
    "react/prop-types": "off",
    "no-console": 1,
    "react/jsx-filename-extension": [ 1, { "extensions": [ ".js", ".jsx" ] } ],
    "camelcase": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [ "src" ]
      }
    }
  }
}
